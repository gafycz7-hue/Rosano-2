-- Rosano Loading GUI Script

-- GUI vytvoření
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local CodeBox = Instance.new("TextBox")
local Submit = Instance.new("TextButton")
local Message = Instance.new("TextLabel")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 300, 0, 200)
Frame.Position = UDim2.new(0.5, -150, 0.5, -100)
Frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)

Title.Parent = Frame
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundTransparency = 1
Title.Text = "Rosano Loading"
Title.TextScaled = true
Title.TextColor3 = Color3.fromRGB(255, 255, 255)

CodeBox.Parent = Frame
CodeBox.Size = UDim2.new(0.8, 0, 0, 40)
CodeBox.Position = UDim2.new(0.1, 0, 0.4, 0)
CodeBox.PlaceholderText = "Zadej kód..."
CodeBox.Text = ""

Submit.Parent = Frame
Submit.Size = UDim2.new(0.5, 0, 0, 40)
Submit.Position = UDim2.new(0.25, 0, 0.65, 0)
Submit.Text = "Potvrdit"

Message.Parent = Frame
Message.Size = UDim2.new(1, 0, 0, 30)
Message.Position = UDim2.new(0, 0, 0.85, 0)
Message.BackgroundTransparency = 1
Message.Text = ""
Message.TextColor3 = Color3.fromRGB(255, 0, 0)

-- Funkce pro ESP
local function createESP(player)
    local character = player.Character
    if not character then return end
    
    local highlight = Instance.new("Highlight")
    highlight.Parent = character
    highlight.Adornee = character
    highlight.FillColor = Color3.fromRGB(255, 0, 0)
    highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    highlight.FillTransparency = 0.5
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
end

-- Funkce pro Aimbot
local function setupAimbot()
    local camera = workspace.CurrentCamera
    local localPlayer = game.Players.LocalPlayer
    local mouse = localPlayer:GetMouse()
    
    mouse.KeyDown:Connect(function(key)
        if key == "q" then -- Q pro aimbot
            local closestPlayer = nil
            local closestDistance = math.huge
            
            for _, player in ipairs(game.Players:GetPlayers()) do
                if player ~= localPlayer and player.Character then
                    local humanoidRootPart = player.Character:FindFirstChild("HumanoidRootPart")
                    if humanoidRootPart then
                        local distance = (humanoidRootPart.Position - camera.CFrame.Position).Magnitude
                        if distance < closestDistance then
                            closestDistance = distance
                            closestPlayer = player
                        end
                    end
                end
            end
            
            if closestPlayer and closestPlayer.Character then
                local target = closestPlayer.Character:FindFirstChild("Head") or closestPlayer.Character:FindFirstChild("HumanoidRootPart")
                if target then
                    camera.CFrame = CFrame.new(camera.CFrame.Position, target.Position)
                end
            end
        end
    end)
end

-- Kontrola kódu
local correctCode = "rosano1234"

Submit.MouseButton1Click:Connect(function()
    if CodeBox.Text == correctCode then
        Message.TextColor3 = Color3.fromRGB(0, 255, 0)
        Message.Text = "✅ Přístup povolen!"
        
        -- Aktivace ESP pro všechny hráče
        for _, player in ipairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer then
                player.CharacterAdded:Connect(function(character)
                    wait(1) -- Počkej na načtení postavy
                    createESP(player)
                end)
                
                if player.Character then
                    createESP(player)
                end
            end
        end
        
        -- Nastavení aimbotu
        setupAimbot()
        
        wait(1)
        ScreenGui:Destroy() -- odstraní okno po správném kódu
    else
        Message.TextColor3 = Color3.fromRGB(255, 0, 0)
        Message.Text = "❌ Špatný kód!"
    end
end)

-- ESP pro nové hráče
game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        wait(1)
        createESP(player)
    end)
end)
