-- Rosano Loading GUI Script

-- GUI vytvoření
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local CodeBox = Instance.new("TextBox")
local Submit = Instance.new("TextButton")
local Message = Instance.new("TextLabel")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 300, 0, 200)
Frame.Position = UDim2.new(0.5, -150, 0.5, -100)
Frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)

Title.Parent = Frame
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundTransparency = 1
Title.Text = "Rosano Loading"
Title.TextScaled = true
Title.TextColor3 = Color3.fromRGB(255, 255, 255)

CodeBox.Parent = Frame
CodeBox.Size = UDim2.new(0.8, 0, 0, 40)
CodeBox.Position = UDim2.new(0.1, 0, 0.4, 0)
CodeBox.PlaceholderText = "Zadej kód..."
CodeBox.Text = ""

Submit.Parent = Frame
Submit.Size = UDim2.new(0.5, 0, 0, 40)
Submit.Position = UDim2.new(0.25, 0, 0.65, 0)
Submit.Text = "Potvrdit"

Message.Parent = Frame
Message.Size = UDim2.new(1, 0, 0, 30)
Message.Position = UDim2.new(0, 0, 0.85, 0)
Message.BackgroundTransparency = 1
Message.Text = ""
Message.TextColor3 = Color3.fromRGB(255, 0, 0)

-- Kontrola kódu
local correctCode = "rosano1234"

Submit.MouseButton1Click:Connect(function()
    if CodeBox.Text == correctCode then
        Message.TextColor3 = Color3.fromRGB(0, 255, 0)
        Message.Text = "✅ Přístup povolen!"
        wait(1)
        ScreenGui:Destroy() -- odstraní okno po správném kódu
    else
        Message.TextColor3 = Color3.fromRGB(255, 0, 0)
        Message.Text = "❌ Špatný kód!"
    end
end)
